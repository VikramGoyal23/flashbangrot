{
  "manifest_version": 3,
  "name": "Content flashbang",
  "version": "1.0",
  "description": "See all the content on a page, at once",
  "host_permissions": ["https://www.reddit.com/*"],

  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/reddit_content.js"],
      "matches": [
        "https://www.reddit.com/",
        "https://www.reddit.com/r/*"
      ]
    },
    {
      "js": ["scripts/tumblr_content.js"],
      "matches": [
        "https://www.tumblr.com/"
      ]
    }
  ]
}
