{
  "manifest_version": 3,
  "name": "Content flashbang",
  "version": "1.0",
  "description": "See all the content on a page, at once",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "scripts/popup.html",
    "default_title": "Set flash rate"
  },

  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "js": ["scripts/reddit_content.js"],
      "matches": [
        "https://www.reddit.com/",
        "https://www.reddit.com/r/*"
      ]
    },
    {
      "js": ["scripts/tumblr_content.js"],
      "matches": [
        "https://www.tumblr.com/",
        "https://www.tumblr.com/dashboard",
        "https://www.tumblr.com/*"
      ]
    },
    {
      "js": ["scripts/instagram_content.js"],
      "matches": [
        "https://www.instagram.com/",
        "https://www.instagram.com/*"
      ]
    },
    {
      "js": ["scripts/article_content.js"],
      "matches": [
        "https://*.medium.com/*",
        "https://medium.com/*",
        "https://*.wikipedia.org/wiki/*"
      ]
    }
  ]
}
